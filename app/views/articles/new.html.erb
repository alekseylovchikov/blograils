<h1 class="text-center">Create an Article</h1>

<%= form_for @article do |f| %>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </p>
  <p>
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control' %>
  </p>
  <p>
    <%= f.submit 'Submit', class: 'btn btn-success' %>
  </p>
<% end %>
